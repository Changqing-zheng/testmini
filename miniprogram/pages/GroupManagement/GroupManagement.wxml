<van-notice-bar
  scrollable="false"
  text="如若您想要删除哪条数据，请先点击该条数据然后点击后面的删除按钮。"
/>

<van-cell-group>
  <van-cell title="{{item.name}}" 
  value="" 
  label="队长:{{item.teamleader}}; 队员:{{item.player}}" 
  border="{{ true }}" 
  wx:for="{{group}}" 
  wx:key="{{index}}" 
  data-groupId="{{item._id}}" 
  bindtap="getValue">
    <van-icon slot="right-icon" name="delete" size="20px" catchtap='deleteGroup'/>
  </van-cell>
</van-cell-group>

<van-tabbar active="{{ active }}" bind:change="onChange">
  <van-tabbar-item icon="orders-o" bind:click="toProjectManagement">项目管理</van-tabbar-item>
  <van-tabbar-item icon="friends-o" >队伍管理</van-tabbar-item>
  <van-tabbar-item icon="home-o" bind:click="toMyInterview">我的面试</van-tabbar-item>
</van-tabbar>